block content
    .container-fluid.my-5
        unless isLoggedIn
            h1.text-muted.mx-5
                em Welcome...

        br

        if isLoggedIn
            h3.text-muted.mx-5
                em You are Logged in successfully!
        
        br

        form.pd-1.mx-5(method='GET', action='/api/register')
 
            button.btn.btn-outline-primary.btn-lg.btn-block To register please - Sign Up!

        form.pd-1.mx-5(method='GET', action='/api/login')
            
            button.btn.btn-outline-success.btn-lg.btn-block To login please - Sign In!

