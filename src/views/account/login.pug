extends ../share/layout

block scripts

block content
    .container-fluid.mt-3
        form.form-signin(method='POST', action='/login')
            .text-center.mb-4
                h1.h3.mb-3.font-weight-normal Sign-in!
                p Insert your information to sign-in!
                br

            .px-5
                .form-label-group
                    label.col-sm-6(for="inputEmail") Email address
                    .col-sm-4
                        input.form-control(type="email", id="inputEmail", name='email', placeholder="Email address")

                br
                .form-label-group
                    label.col-sm-6(for="inputPassword") Password
                    .col-sm-4
                        input.form-control(type="password", id="inputPassword", name='password', placeholder="Password", required='true')

                br
                .col-sm-4
                    button.btn.btn-lg.btn-secondary.btn-block(type='submit') Sign In!
                    p.mt-5.mb-3.text-muted.text-center AMIR - VIHAN 2020
